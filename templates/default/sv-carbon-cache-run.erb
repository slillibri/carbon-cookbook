#!/bin/sh
exec 2>&1
VIRTUAL_ENV="<%= @options[:graphite_home] %>"
export VIRTUAL_ENV
_OLD_VIRTUAL_PATH="$PATH"
export GRAPHITE_ROOT="<%= @options[:graphite_home] %>"
PATH="$VIRTUAL_ENV/bin:$PATH"
export PATH
cd <%= @options[:graphite_home] %>/lib
exec chpst -u <%= @options[:user] %> -l <%= @options[:graphite_home] %>/storage/carbon-cache-<%= @options[:carbon_instance] %>.lock -- <% if @options[:cpu_affinity] %>taskset -c <%= @options[:cpu_affinity] %><% end %> twistd --nodaemon --umask=0022 carbon-cache --instance=<%= @options[:carbon_instance] %> --config <%= @options[:graphite_home] %>/conf/carbon-cache-<%= @options[:carbon_instance] %>.conf start
